!Emacs.font: Hack:size=15
 
#if (WIDTH<=1024)
!! Tiny screen
#define EMACS_GEOM 82x26+0+0
#define TERM_GEOM  82x26-0-0
#define EMACS_FONT Droid Sans Mono:size=15:antialise=false
#define TERM_FONT Droid Sans Mono:size=8:antialise=false
#define STD_FIX_FONT -xos4-terminus-medium-r-*-*-*-120-100-100-*-*-iso8859-16
#elif (WIDTH<=1500)
!! Small Screen: 11 inch
#define EMACS_GEOM 165x45+0+0
#define TERM_GEOM  168x47+0+0
#define EMACS_FONT Droid Sans Mono:size=12:antialise=false
#define TERM_FONT Droid Sans Mono:size=8:antialise=false
#define STD_FIX_FONT -xos4-terminus-medium-r-*-*-*-120-100-100-*-*-iso8859-16
#elif (WIDTH<=2000)
!! Medium screen: 15
#define EMACS_GEOM 166x60+0+0
#define TERM_GEOM  190x40-0-0
#define EMACS_FONT Droid Sans Mono:size=15:antialise=false
#define TERM_FONT Droid Sans Mono:size=8:antialise=false
#define STD_FIX_FONT -xos4-terminus-medium-r-*-*-*-120-100-100-*-*-iso8859-16
#else
!! Big screen
#define EMACS_GEOM 166x60+0+0
#define TERM_GEOM  190x60-0-0
#define EMACS_FONT Droid Sans Mono:size=15:antialise=false
#define TERM_FONT Droid Sans Mono:size=8:antialise=false
#define STD_FIX_FONT -xos4-terminus-bold-r-*-*-*-160-100-100-*-*-iso8859-16
#endif

